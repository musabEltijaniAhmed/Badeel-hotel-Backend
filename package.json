{
  "name": "room-booking-api",
  "version": "1.0.0",
  "description": "Room booking API with Express, Sequelize, Firebase notifications, SMS, JWT auth",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:coupon": "node scripts/run-migration.js",
    "db:setup": "node scripts/setup-database.js",
    "db:seed": "node scripts/seed-permissions.js",
    "db:setup-roles": "node scripts/setup-roles-system.js",
    "db:add-role-id": "node scripts/add-role-id-to-users.js",
    "db:reset": "npm run db:setup && npm run db:setup-roles && npm run db:add-role-id && npm run db:seed",
    "test:permissions": "node scripts/test-permissions.js",
    "postman:update": "node scripts/update-postman.js",
    "postman:link": "node scripts/postman-link-generator.js",
    "postman:sync": "npm run postman:update && npm run postman:link && echo 'âœ… Postman Collection updated with direct links!'",
    "seed:property-types": "node scripts/seed-property-types.js",
    "setup:complete": "npm run db:reset && npm run seed:property-types && npm run postman:sync"
  },
  "author": "",
  "license": "MIT",
  "dependencies": { 
    "axios": "^1.12.1",
    "cors": "^2.8.5", 
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.10.1",
    "helmet": "^7.0.0",
    "i18n": "^0.15.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.8.0",
    "nodemailer": "^6.9.10",
    "sequelize": "^6.37.2",
    "socket.io": "^4.7.5",
    "stripe": "^14.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^4.5.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "sequelize-cli": "^6.6.1",
    "supertest": "^6.3.3"
  }
}
